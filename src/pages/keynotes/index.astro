---
import MainLayout from '@/layouts/MainLayout.astro'
import { getCollection } from 'astro:content'

const keynotes = await getCollection('keynotes').then((k) =>
  k.map((k) => k.data).sort((a, b) => b.year - a.year)
)
---

<MainLayout title="Keynotes">
  <div class="max-w-5xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Keynotes</h1>

    <div class="grid grid-cols-2 gap-8">
      {
        keynotes.map((keynote) => (
          <article class="bg-white rounded-2xl border border-gray-300 p-6 flex flex-col">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h2 class="text-2xl font-semibold mb-2">
                  {keynote.title}
                </h2>
                <p class="text-neutral-600">{keynote.department}</p>
                {keynote.date ? (
                  <div>
                    <time class="text-neutral-600">
                      {new Date(keynote.date).toLocaleDateString(
                        undefined,
                        {
                          dateStyle: 'full',
                        }
                      )}
                    </time>
                    {keynote.time && (
                      <span class="text-neutral-600">
                        at {keynote.time}
                      </span>
                    )}
                  </div>
                ) : null}
              </div>
            </div>

            <p class="text-gray-700 mb-4">{keynote.description}</p>

            {keynote.location && (
              <p class="text-gray-600 mb-4">
                <span class="font-medium">Location:</span> {keynote.location}
              </p>
            )}

            {keynote.url && (
              <a
                href={keynote.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-blue-600 hover:text-blue-800 inline-block mb-4"
              >
                Event Link
              </a>
            )}

            <div class="mt-auto pt-6 flex justify-end">
              <a
                href={`/keynotes/${keynote.year}`}
                class="inline-flex items-center rounded-full h-10 px-3 bg-tns-red text-white font-medium"
              >
                View â†’
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</MainLayout>
